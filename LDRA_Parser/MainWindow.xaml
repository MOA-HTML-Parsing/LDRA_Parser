<Window x:Class="LDRA_Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:LDRA_Parser.ViewModel"
        xmlns:local_2="clr-namespace:LDRA_Parser.Model"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440">
    <Window.DataContext>
        <viewModel:FileSystemViewModel/>
    </Window.DataContext>
    <Grid>

        <Button Content="Load Files" Click="OnLoadFilesClicked" Margin="18,24,0,938" HorizontalAlignment="Left" Width="150" Height="19.96" />
        <TreeView ItemsSource="{Binding Items}"  Width="150" Height="374.96" Margin="10,88,1264,519">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type local_2:FileSystemItem}" ItemsSource="{Binding Children}">
                    <TextBlock x:Name="input_textblock" MouseRightButtonDown="TextBlock_MouseRightButtonDown" Text="{Binding Name}" />
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>


        <TextBox  Text="{Binding HtmlContent}" HorizontalAlignment="Left" Margin="286,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="278" Height="385"/>
        <Label Content="BEFORE" HorizontalAlignment="Left" Height="22" Margin="288,57,0,0" VerticalAlignment="Top" Width="119"/>
        <TextBox  Text="{Binding HtmlContent2}" HorizontalAlignment="Left" Margin="653,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="276" Height="385"/>
        <Label Content="AFTER" HorizontalAlignment="Left" Height="22" Margin="656,55,0,0" VerticalAlignment="Top" Width="120"/>

        <StackPanel Orientation="Horizontal" Margin="0,191,20,-171">
            <ScrollViewer Width="600" Height="300" Margin="150,10,10,10">
                <ListView ItemsSource="{Binding BeforeVM.BeforeViewList}" Width="600" Height="300">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Number of Violations" Width="165">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Number_of_Violations}"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="LDRA Code" Width="110">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LDRA_Code}"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Rule Standards" Width="180">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Rule_Standards}"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="MISRA-C:2004 Code" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding MISRA_Code}"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>

            <ScrollViewer Width="600" Height="300" Margin="10">
                <ListView ItemsSource="{Binding AfterVM.AfterViewList}" Width="600" Height="300">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Number of Violations" Width="165">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Number_of_Violations}"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="LDRA Code" Width="110">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LDRA_Code}"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Rule Standards" Width="180">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Rule_Standards}"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="MISRA-C:2004 Code" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding MISRA_Code}"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>
        </StackPanel>
    </Grid>


</Window>
    
    
    

    