<Window x:Class="LDRA_Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:LDRA_Parser.ViewModel"
        xmlns:local_2="clr-namespace:LDRA_Parser.Model"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440">
    <Window.DataContext>

        <viewModel:FileSystemViewModel/>

    </Window.DataContext>


    <Grid>

        <StackPanel Height="596" VerticalAlignment="Bottom" Margin="860,0,0,402">
            <StackPanel.DataContext>
                <viewModel:MainViewModel/>
            </StackPanel.DataContext>
            <Button Content="Upload HTML" Width="100" Height="30" Command="{Binding UploadCommand}"/>
            <TextBox Text="{Binding HtmlContent}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" AcceptsReturn="True" Height="276" Width="258"/>
        </StackPanel>


        <Button Content="Load Files" Click="OnLoadFilesClicked" Margin="10,24,1296,938" />
        <TreeView ItemsSource="{Binding Items}" Margin="10,88,1296,717">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type local_2:FileSystemItem}" ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Name}" />
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>



    </Grid>


</Window>