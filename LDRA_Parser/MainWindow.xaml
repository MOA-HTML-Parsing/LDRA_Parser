                                        <!-- 네 번째 열의 데이터 -->
                                        <TextBlock Text="{Binding MISRA_Code}" Margin="5" TextAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>

                                        <!-- 상세 정보 텍스트박스 -->
                                        <!--<TextBox x:Name="DetailsTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" AcceptsReturn="True" Margin="0,5,0,0" Visibility="Collapsed">
                                            <TextBox.Text>
                                                <MultiBinding StringFormat="{}{0}{1}{2}">
                                                    <Binding Path="LDRA_Code"/>
                                                    <Binding Path="Rule_Standards"/>
                                                    <Binding Path="MISRA_Code"/>
                                                    <Binding Path="Changed_Content"/>
                                                </MultiBinding>
                                            </TextBox.Text>
                                        </TextBox>-->
                                        <ListBox x:Name="ParsedHtmlListBox" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="200" Visibility="Collapsed">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding ViolationNumber}" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding Location}"/>
                                                        <Separator/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </StackPanel>
                                </Border>

                                <!-- 템플릿 트리거 -->
                                <ControlTemplate.Triggers>
                                    <!--<Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background" Value="LightGray"/>
                            <Setter TargetName="DetailsTextBox" Property="Visibility" Value="Visible"/>
                        </Trigger>-->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="LightYellow"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

        </ListView>
        
        <Label Content="BEFORE" HorizontalAlignment="Left" Height="55" Margin="44,31,0,0" VerticalAlignment="Top" Width="109" Grid.Column="1"/>
        <Label Content="AFTER" HorizontalAlignment="Left" Height="24" Margin="32,44,0,0" VerticalAlignment="Top" Width="112" Grid.Column="2"/>
        <Button  Content="Save" Width="Auto" VerticalAlignment="Top" Margin="13,90,15,90" Grid.Column="3" Grid.Row="1" Click="Button_Click"/>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Margin="20,10,45,10" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Grid.Column="1" Content="Compare" HorizontalAlignment="Left" Margin="553,32,0,0" VerticalAlignment="Top" Height="42" Width="52" Click="Button_Click_1"/>

    </Grid>
</Window>